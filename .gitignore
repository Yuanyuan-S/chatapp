# 在项目根目录创建 .gitignore 文件
echo "# 忽略macOS系统文件
.DS_Store

# 忽略node_modules文件夹
node_modules/

# 忽略日志文件
*.log


# 忽略编译输出文件夹
dist/
build/

" > .gitignore

# 添加所有文件（包括 README.md 和 .gitignore）
git add README.md .gitignore

# 提交
git commit -m "Add README and .gitignore"

# 推送到 GitHub 主分支 main
git push -u origin main
